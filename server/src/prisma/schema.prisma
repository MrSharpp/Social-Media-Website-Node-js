datasource db {
    url      = "file:./database.db"
    provider = "sqlite"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int     @id @default(autoincrement())
    username String
    email    String
    password String
    role     String
    Post     Post[]
    Event    Event[]
}

model Post {
    id          Int      @id @default(autoincrement())
    title       String?
    description String
    upvote      String
    downvote    String
    user        User     @relation(fields: [userId], references: [id])
    userId      Int
    views       Int
    created     DateTime
}

model Event {
    id          Int      @id @default(autoincrement())
    title       String
    description String
    eventDate   DateTime
    upvotes     Int
    downvotes   Int
    created     DateTime
    views       Int?
    link        String?
    user        User     @relation(fields: [userId], references: [id])
    userId      Int
}
